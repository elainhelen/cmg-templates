{
    "parameters": {
        "poolId": {
            "type": "string",
            "metadata": {
                "description": "The id of the pool on which to run the job"
            }
        },
        "jobName": {
            "type": "string",
            "defaultValue": "mpiJob",
            "metadata": {
                "description": "The name of the job",
                "advancedType": "job-id"
            }
        },
        "dedicatedVmCount": {
            "type": "int",
            "defaultValue": 2,
            "metadata": {
                "description": "The number of VM nodes, it must be the same as the number of nodes in the pool"
            }
        },
        "inputFileGroup": {
            "type": "string",
            "metadata": {
                "description": "The file group where the input files are stored",
                "advancedType": "file-group"
            }
        },
        "fileName": {
            "type": "string",
            "metadata": {
                "description": "The data file name needs to be run"
            }
        },
        "outputs": {
            "type": "string",
            "metadata": {
                "description": "The file group where outputs will be stored",
                "advancedType": "file-group"
            }
        },
        "applicationId": {
            "type": "string",
            "defaultValue": "STARS",
            "metadata": {
                "description": "The name of CMG simulator"
            },
            "allowedValues": [
                "STARS_MPI",
                "GEM_MPI"
            ]
        },
        "applicationVersion": {
            "type": "string",
            "defaultValue": "2017.23",
            "metadata": {
                "description": "The version number of CMG simulator"
            },
            "allowedValues": [
                "2017.23",
                "2016.30"
            ]
        },
        "additionalSwitches": {
            "type": "string",
            "defaultValue": "-log -sr3",
            "metadata": {
                "description": "The additional switches of CMG simulation"
            }
        }
    },
    "job": {
        "type": "Microsoft.Batch/batchAccounts/jobs",
        "properties": {
            "id": "[parameters('jobName')]",
            "displayName": "[parameters('jobName')]",
            "onAllTasksComplete": "terminateJob",
            "constraints": {
                "maxWallClockTime": "PT5H",
                "maxTaskRetryCount": 0
            },
            "poolInfo": {
                "poolId": "[parameters('poolId')]"
            },
            "taskFactory": {
                "type": "taskCollection",
                "tasks": [
                    {
                        "id": "Task01",
                        "commandLine": "/bin/bash -c 'python3.7 $AZ_BATCH_TASK_WORKING_DIR/runmpisimulation.py [parameters('fileName')] [parameters('applicationId')] [parameters('applicationVersion')] [parameters('dedicatedVmCount')] [parameters('additionalSwitches')]'",
                        "userIdentity": {
                            "autoUser": {
                                "scope": "pool",
                                "elevationLevel": "nonadmin"
                            }
                        },
                        "multiInstanceSettings": {
                            "numberOfInstances": "[parameters('dedicatedVmCount')]",
                            "coordinationCommandLine": "/bin/bash -c 'set -e; set -o pipefail; wait'",
                            "commonResourceFiles": [
                                {
                                    "source": {
                                        "fileGroup": "[parameters('inputFileGroup')]"
                                    },
                                    "filePath": "wd"
                                }
                            ]
                        },
                        "outputFiles": [
                            {
                                "filePattern": "../std*.txt",
                                "destination": {
                                    "autoStorage": {
                                        "fileGroup": "[parameters('outputs')]",
                                        "path": "[parameters('jobName')]"
                                    }
                                },
                                "uploadOptions": {
                                    "uploadCondition": "taskCompletion"
                                }
                            },
                            {
                                "filePattern": "./*.sr3",
                                "destination": {
                                    "autoStorage": {
                                        "fileGroup": "[parameters('outputs')]",
                                        "path": "[parameters('jobName')]"
                                    }
                                },
                                "uploadOptions": {
                                    "uploadCondition": "taskCompletion"
                                }
                            },
                            {
                                "filePattern": "./*.log",
                                "destination": {
                                    "autoStorage": {
                                        "fileGroup": "[parameters('outputs')]",
                                        "path": "[parameters('jobName')]"
                                    }
                                },
                                "uploadOptions": {
                                    "uploadCondition": "taskCompletion"
                                }
                            },
                            {
                                "filePattern": "./*.out",
                                "destination": {
                                    "autoStorage": {
                                        "fileGroup": "[parameters('outputs')]",
                                        "path": "[parameters('jobName')]"
                                    }
                                },
                                "uploadOptions": {
                                    "uploadCondition": "taskCompletion"
                                }
                            }
                        ],
                        "applicationPackageReferences": [
                            {
                                "applicationId": "[parameters('applicationId')]",
                                "version": "[parameters('applicationVersion')]"
                            }
                        ]
                    }
                ]
            }
        }
    }
}
