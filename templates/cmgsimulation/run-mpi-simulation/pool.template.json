{
    "parameters": {
        "poolName": {
            "type": "string",
            "defaultValue": "mpiPool",
            "metadata": {
                "description": "The Id of Azure Batch pool"
            }
        },
        "nodeSize": {
            "type": "string",
            "defaultValue": "Standard_H16r",
            "allowedValues": [
                "Standard_H16r",
                "Standard_H16mr",
                "Standard_HC44rs"
            ],
            "metadata": {
                "description": "The size of the virtual machines that run MPI jobs"
            }
        },
        "dedicatedVmCount": {
            "type": "int",
            "defaultValue": 2,
            "metadata": {
                "description": "The number of dedicated nodes in the Azure Batch pool"
            }
        },
        "intelMpiVersion": {
            "type": "string",
            "defaultValue": "2018.4-274",
            "allowedValues": [
                "2016.3-210",
                "2017.8-262",
                "2018.4-274",
                "2019.5-281"
            ],
            "metadata": {
                "description": "The version of the Intel runtime libraries"
            }
        }
    },
    "variables": {
        "osType": {
            "imageReference": {
                "publisher": "OpenLogic",
                "offer": "CentOS-HPC",
                "sku": "7.4",
                "version": "latest"
            },
            "nodeAgentSKUId": "batch.node.centos 7"
        }
    },
    "pool": {
        "type": "Microsoft.Batch/batchAccounts/pools",
        "properties": {
            "id": "[parameters('poolName')]",
            "displayName": "Linux pool [parameters('poolName')] for CMG MPI job",
            "virtualMachineConfiguration": "[variables('osType')]",
            "vmSize": "[parameters('nodeSize')]",
            "targetDedicatedNodes": "[parameters('dedicatedVmCount')]",
            "enableAutoScale": false,
            "enableInterNodeCommunication": true,
            "maxTasksPerNode": 1,
            "startTask": {
                "commandLine": "/bin/bash -c \"$AZ_BATCH_APP_PACKAGE_cmgcloud_mpi_2019_1/cmgcloud_mpi/start_task_install.sh [parameters('intelMpiVersion')]\"",
                "userIdentity": {
                    "autoUser": {
                        "scope": "pool",
                        "elevationLevel": "admin"
                    }
                },
                "maxTaskRetryCount": 5,
                "waitForSuccess": true
            },
            "taskSchedulingPolicy": {
                "nodeFillType": "Pack"
            },
            "applicationPackageReferences": [
                {
                    "applicationId": "CMGCLOUD_MPI",
                    "version": "2019.1"
                }
            ],
            "networkConfiguration": {
                "subnetId": "/subscriptions/9fb1faf4-2a05-47ad-8bf6-281265edd4bd/resourceGroups/cmgdev/providers/Microsoft.Network/virtualNetworks/cmgdev-mpi/subnets/subnet_mpinodes",
                "dynamicVNetAssignmentScope": "none"
            }
        }
    }
}
