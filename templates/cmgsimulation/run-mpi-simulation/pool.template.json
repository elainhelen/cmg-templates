{
    "parameters": {
        "poolName": {
            "type": "string",
            "defaultValue": "mpiPool",
            "metadata": {
                "description": "The Id of Azure Batch pool"
            }
        },
        "nodeSize": {
            "type": "string",
            "defaultValue": "Standard_H16r",
            "allowedValues": [
                "Standard_H16r",
                "Standard_H16mr",
                "Standard_HC44rs"
            ],
            "metadata": {
                "description": "The size of the virtual machines that run MPI jobs"
            }
        },
        "dedicatedVmCount": {
            "type": "int",
            "defaultValue": 2,
            "metadata": {
                "description": "The number of dedicated nodes in the Azure Batch pool"
            }
        }
    },
    "variables": {
        "osType": {
            "imageReference": {
                "publisher": "OpenLogic",
                "offer": "CentOS-HPC",
                "sku": "7.4",
                "version": "latest"
            },
            "nodeAgentSKUId": "batch.node.centos 7"
        },
        "py1": "sudo yum install -y gcc openssl-devel bzip2-devel libffi-devel",
        "py2": "cd /usr/src && sudo wget https://www.python.org/ftp/python/3.7.4/Python-3.7.4.tgz",
        "py3": "sudo tar xzf Python-3.7.4.tgz && cd Python-3.7.4 && sudo ./configure --enable-optimizations",
        "py4": "sudo make altinstall && sudo rm /usr/src/Python-3.7.4.tgz && python3.7 -V",
        "mkl1": "sudo yum-config-manager --add-repo https://yum.repos.intel.com/mkl/setup/intel-mkl.repo",
        "mkl2": "sudo rpm --import https://yum.repos.intel.com/intel-gpg-keys/GPG-PUB-KEY-INTEL-SW-PRODUCTS-2019.PUB",
        "mkl3": "sudo yum install -y intel-mkl-2018.2-046"
    },
    "pool": {
        "type": "Microsoft.Batch/batchAccounts/pools",
        "properties": {
            "id": "[parameters('poolName')]",
            "displayName": "Linux pool [parameters('poolName')] for CMG MPI job",
            "virtualMachineConfiguration": "[variables('osType')]",
            "vmSize": "[parameters('nodeSize')]",
            "targetDedicatedNodes": "[parameters('dedicatedVmCount')]",
            "enableAutoScale": false,
            "enableInterNodeCommunication": true,
            "maxTasksPerNode": 1,
            "startTask": {
                "commandLine": "/bin/bash -c \"[variables('py1')] && [variables('py2')] && [variables('py3')] && [variables('py4')] && [variables('mkl1')] && [variables('mkl2')] && [variables('mkl3')]\"",
                "userIdentity": {
                    "autoUser": {
                        "scope": "pool",
                        "elevationLevel": "admin"
                    }
                },
                "maxTaskRetryCount": 5,
                "waitForSuccess": true
            },
            "taskSchedulingPolicy": {
                "nodeFillType": "Pack"
            },
            "applicationPackageReferences": [
                {
                    "applicationId": "CMGCLOUD_MPI",
                    "version": "2019.1"
                }
            ],
            "networkConfiguration": {
                "subnetId": "/subscriptions/9fb1faf4-2a05-47ad-8bf6-281265edd4bd/resourceGroups/hpcTest/providers/Microsoft.Network/virtualNetworks/hpcTestVnet/subnets/subnet_hpcnodes",
                "dynamicVNetAssignmentScope": "none"
            }
        }
    }
}
