{
    "parameters": {
        "poolId": {
            "type": "string",
            "defaultValue": "mpiPool",
            "metadata": {
                "description": "The id of Azure Batch pool"
            }
        },
        "vmSize": {
            "type": "string",
            "defaultValue": "STANDARD_H16r",
            "metadata": {
                "description": "The size of the virtual machines that can run MPI jobs"
            },
            "allowedValues": [
                "STANDARD_H16r",
                "Standard_H16mr"
            ]
        },
        "vmCount": {
            "type": "int",
            "defaultValue": 2,
            "metadata": {
                "description": "The number of the virtual machines"
            }
        }
    },
    "variables": {
        "osType": {
            "publisher": "OpenLogic",
            "offer": "CentOS-HPC",
            "sku": "7.4",
            "version": "d"
        }
    },
    "pool": {
        "type": "Microsoft.Batch/batchAccounts/pools",
        "properties": {
            "id": "[parameters('poolId')]",
            "virtualMachineConfiguration": {
                "imageReference": "[variables('osType')]",
                "nodeAgentSKUId": ""
            },
            "vmSize": "[parameters('vmSize')]",
            "targetDedicatedNodes": "[parameters('vmCount')]",
            "enableAutoScale": false
        }
    }
}