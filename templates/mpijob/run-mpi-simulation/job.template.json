{
    "parameters": {
        "poolId": {
            "type": "string",
            "metadata": {
                "description": "The id of the pool on which to run the job"
            }
        },
        "jobName": {
            "type": "string",
            "defaultValue": "mpiJob",
            "metadata": {
                "description": "The name of the job",
                "advancedType": "job-id"
            }
        }
    },
    "job": {
        "type": "Microsoft.Batch/batchAccounts/jobs",
        "properties": {
            "id": "[parameters('jobName')]",
            "displayName": "[parameters('jobName')]",
            "poolInfo": {
                "poolId": "[parameters('poolId')]"
            },
            "taskFactory": {
                "type": "taskCollection",
                "tasks": [
                    {
                        "id": "Task01",
                        "commandLine": "/bin/bash -c 'source /opt/intel/impi/5.1.3.223/bin64/mpivars.sh && export I_MPI_FABRICS=shm:dapl && export I_MPI_DAPL_PROVIDER=ofa-v2-ib0 && export I_MPI_DYNAMIC_CONNECTION=0 && mpirun -n 2 -ppn 1 -hosts $AZ_BATCH_HOST_LIST IMB-MPI1 pingpong'",
                        "multiInstanceSettings": {
                            "numberOfInstances": 2,
                            "coordinationCommandLine": "/bin/bash -c 'ls -la'"
                        }
                    }
                ]
            }
        }
    }
}
