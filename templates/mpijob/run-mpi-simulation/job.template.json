{
    "templateMetadata": {
        "description": "A simple application template for working with CMG MPI Jobs"
    },
    "parameters": {
        "poolId": {
            "type": "string",
            "metadata": {
                "description": "The id of the pool on which to run the job"
            }
        },
        "jobName": {
            "type": "string",
            "defaultValue": "mpiJob",
            "metadata": {
                "description": "The name of the job",
                "advancedType": "job-id"
            }
        },
        "taskName": {
            "type": "string",
            "defaultValue": "task01",
            "metadata": {
                "description": "The id of the task",
                "advancedType": "task-id"
            }
        },
        "dedicatedVmCount": {
            "type": "int",
            "defaultValue": 2,
            "metadata": {
                "description": "The number of dedicated VM nodes, must be the same as the number of nodes in the pool."
            }
        },
        "inputFilegroup": {
            "type": "string",
            "metadata": {
                "description": "The file group where the input files are stored",
                "advancedType": "file-group"
            }
        },
        "applicationId": {
            "type": "string",
            "defaultValue": "STARS",
            "metadata": {
                "description": "The name of application package"
            },
            "allowedValues": [
                "STARS",
                "GEM"
            ]
        },
        "applicationVersion":{
            "type": "string",
            "defaultValue": "2017.23",
            "metadata": {
                "description": "The version of application package"
            },
            "allowedValues": [
                "2017.23",
                "2016.30"
            ]
        }
    },
    "job": {
        "type": "Microsoft.Batch/batchAccounts/jobs",
        "properties": {
            "id": "[parameters('jobName')]",
            "displayName": "[parameters('jobName')]",
            "onAllTasksComplete": "terminateJob",
            "constraints": {
                "maxWallClockTime": "PT5H",
                "maxTaskRetryCount": 0
            },
            "poolInfo": {
                "poolId": "[parameters('poolId')]"
            },
            "taskFactory": {
                "type": "taskCollection",
                "tasks": {
                    "id": "[parameters('taskName')]",
                    "commandLine": "/bin/bash -c 'ls -la'",
                    "multiInstanceSettings": {
                        "numberOfInstances": "[parameters('dedicatedVmCount')]",
                        "coordinationCommandLine": "/bin/bash -c 'ls -la'"
                    }
                }
            }
        }
    }
}