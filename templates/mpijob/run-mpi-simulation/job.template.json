{
    "parameters": {
        "poolId": {
            "type": "string",
            "metadata": {
                "description": "The id of the pool on which to run the job"
            }
        },
        "jobName": {
            "type": "string",
            "defaultValue": "mpiJob",
            "metadata": {
                "description": "The name of the job",
                "advancedType": "job-id"
            }
        },
        "dedicatedVmCount": {
            "type": "int",
            "defaultValue": 2,
            "metadata": {
                "description": "The number of VM nodes, it must be the same as the number of nodes in the pool"
            }
        },
        "inputFileGroup": {
            "type": "string",
            "metadata": {
                "description": "The file group where the input files are stored",
                "advancedType": "file-group"
            }
        }
    },
    "job": {
        "type": "Microsoft.Batch/batchAccounts/jobs",
        "properties": {
            "id": "[parameters('jobName')]",
            "displayName": "[parameters('jobName')]",
            "poolInfo": {
                "poolId": "[parameters('poolId')]"
            },
            "taskFactory": {
                "type": "taskCollection",
                "tasks": [
                    {
                        "id": "Task01",
                        "commandLine": "/bin/bash -c 'source /opt/intel/impi/5.1.3.223/bin64/mpivars.sh && export I_MPI_FABRICS=shm:dapl && export I_MPI_DAPL_PROVIDER=ofa-v2-ib0 && export I_MPI_DYNAMIC_CONNECTION=0 && mpirun -n 2 -ppn 1 -hosts $AZ_BATCH_HOST_LIST IMB-MPI1 pingpong'",
                        "multiInstanceSettings": {
                            "numberOfInstances": "[parameters('dedicatedVmCount')]",
                            "coordinationCommandLine": "/bin/bash -c 'find $AZ_BATCH_TASK_SHARED_DIR -type f -not -path '$AZ_BATCH_TASK_WORKING_DIR/*' \\( ! -iname 'std*.txt' \\)'",
                            "commonResourceFiles": [
                                {
                                    "source": {
                                        "fileGroup": "[parameters('inputFileGroup')]"
                                    }
                                }
                            ]
                        }
                    }
                ]
            }
        }
    }
}
