{
    "parameters": {
        "poolId": {
            "type": "string",
            "metadata": {
                "description": "The id of the pool on which to run the job"
            }
        },
        "jobName": {
            "type": "string",
            "defaultValue": "mpiJob",
            "metadata": {
                "description": "The name of the job",
                "advancedType": "job-id"
            }
        },
        "dedicatedVmCount": {
            "type": "int",
            "defaultValue": 2,
            "metadata": {
                "description": "The number of VM nodes, it must be the same as the number of nodes in the pool"
            }
        },
        "inputFileGroup": {
            "type": "string",
            "metadata": {
                "description": "The file group where the input files are stored",
                "advancedType": "file-group"
            }
        },
        "fileName": {
            "type": "string",
            "metadata": {
                "description": "The data file name needs to be run"
            }
        },
        "applicationId": {
            "type": "string",
            "defaultValue": "STARS",
            "metadata": {
                "description": "The name of CMG simulator"
            },
            "allowedValues": [
                "STARS",
                "GEM"
            ]
        },
        "applicationVersion": {
            "type": "string",
            "defaultValue": "2017.23",
            "metadata": {
                "description": "The version number of CMG simulator"
            },
            "allowedValues": [
                "2017.23",
                "2016.30"
            ]
        }
    },
    "job": {
        "type": "Microsoft.Batch/batchAccounts/jobs",
        "properties": {
            "id": "[parameters('jobName')]",
            "displayName": "[parameters('jobName')]",
            "poolInfo": {
                "poolId": "[parameters('poolId')]"
            },
            "taskFactory": {
                "type": "taskCollection",
                "tasks": [
                    {
                        "id": "Task01",
                        "commandLine": "/bin/bash -c 'python3.7 $AZ_BATCH_TASK_WORKING_DIR/runmpisimulation.py [parameters('fileName')] [parameters('applicationId')] [parameters('applicationVersion')] [parameters('dedicatedVmCount')]'",
                        "userIdentity": {
                            "autoUser": {
                                "scope": "pool",
                                "elevationLevel": "nonadmin"
                            }
                        },
                        "multiInstanceSettings": {
                            "numberOfInstances": "[parameters('dedicatedVmCount')]",
                            "coordinationCommandLine": "/bin/bash -c 'set -e; set -o pipefail; wait'",
                            "commonResourceFiles": [
                                {
                                    "source": {
                                        "fileGroup": "[parameters('inputFileGroup')]"
                                    },
                                    "filePath": "wd"
                                }
                            ]
                        }
                    }
                ]
            }
        }
    }
}
